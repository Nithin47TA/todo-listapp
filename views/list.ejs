<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="css/styles.css">
    <title>ToDoApp</title>
</head>
<body>

  <div class="box" id="heading">
    <h1> <%= day %> </h1>

  </div>
  <div class="box">
    <% for(var i=0;i<list.length;i++) { %>
      <div class="item">
        <form class="item" action="/checkbox" method="post">
          <input type="checkbox" value="<%=list[i]%>" onChange="this.form.submit()">
        </form>
        <p><%= list[i] %></p>
      </div>
    <% } %>


    <form class="item" action="/" method="POST">
    <input type="text" name="Item" placeholder="newItem" autocomplete="off">
    <button name="button" type="submit">+</button>
    </form>
  </div>


<script type="text/javascript" src="index.js">

</script>



</body>
</html>
